<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/colorDiSe">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout6"
            android:weightSum="1"
            android:background="@color/colorGreen">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/reg_win_return_but"
                android:layout_weight="0.2"
                android:background="@color/colorAlpha1"
                android:singleLine="false"
                android:textSize="30dp"
                android:textColor="@color/colorWhite"
                android:text="&lt;"
                android:gravity="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="注册"
                android:id="@+id/reg_win_label_tv"
                android:layout_weight="0.6"
                android:textColor="@color/colorWhite"
                android:textSize="20dp"
                android:gravity="center" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/button10"
                android:layout_weight="0.2"
                android:background="@color/colorAlpha1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp"
            android:id="@+id/linearLayout9"
            android:background="@color/colorWhite"
            android:layout_below="@+id/linearLayout6">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_weight="1"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:ems="10"
                    android:id="@+id/reg_win_phone_et"
                    android:layout_gravity="right"
                    android:background="@color/colorAlpha1"
                    android:textColor="@color/cityFont"
                    android:textColorHint="@color/textcolorhint"
                    android:textSize="14dp"
                    android:hint="输入手机号"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="11"
                    android:maxLines="1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:text="New Text"
                    android:id="@+id/textView26"
                    android:layout_gravity="center_horizontal"
                    android:background="#59585b" />
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="获取验证码"
                android:id="@+id/getSms"
                android:background="@color/loginbackground"
                android:layout_weight="1.6"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/linearLayout9"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/colorWhite"
            android:id="@+id/linearLayout10">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:layout_marginRight="30dp"
                android:id="@+id/sms_ll">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/reg_win_sms_et"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/colorAlpha1"
                    android:textColor="@color/cityFont"
                    android:textColorHint="@color/textcolorhint"
                    android:textSize="14dp"
                    android:hint="输入商户编码"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLines="1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:text="New Text"
                    android:id="@+id/textView27"
                    android:layout_gravity="center_horizontal"
                    android:background="#59585b" />
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="输入验证码"
                android:id="@+id/button12"
                android:background="@color/colorAccent"
                android:textColor="@color/loginbackground"
                android:layout_weight="1.6"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/iden_ll"
            android:background="@color/colorWhite"
            android:layout_below="@+id/linearLayout10"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="为了您的账号安全请填写以下真实信息"
                android:id="@+id/textView25"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                style="@style/label_fout_base"
                android:textSize="16dp"
                android:gravity="center" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:inputType="none"
                android:ems="10"
                android:id="@+id/worker_iden_et"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorAlpha1"
                android:hint="输入身份证号"
                android:textColor="@color/cityFont"
                android:textColorHint="@color/textcolorhint"
                android:gravity="center"
                android:maxLength="18"
                android:maxLines="1"
                android:textSize="14dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:text="New Text"
                android:id="@+id/textView17"
                android:background="#59585b"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:ems="10"
                android:id="@+id/worker_name_et"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorAlpha1"
                android:hint="请填写真实姓名"
                android:textColor="@color/cityFont"
                android:textColorHint="@color/textcolorhint"
                android:gravity="center"
                android:maxLength="4"
                android:maxLines="1"
                android:textSize="14dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:text="New Text"
                android:id="@+id/textView28"
                android:background="#59585b"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout5"
            android:background="@color/colorWhite"
            android:layout_below="@+id/iden_ll"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp">

            <TextView
                style="@style/label_fout_base"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="设置登陆密码"
                android:id="@+id/textView24"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:textSize="16dp"
                android:gravity="center" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/reg_win_paw_et1"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorAlpha1"
                android:hint="请设置登陆密码(长度6~12位)"
                android:textColor="@color/cityFont"
                android:textColorHint="@color/textcolorhint"
                android:gravity="center"
                android:maxLength="12"
                android:maxLines="1"
                android:textSize="14dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:text="New Text"
                android:id="@+id/textView37"
                android:background="#59585b"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout8"
            android:background="@color/colorWhite"
            android:layout_below="@+id/iden_ll"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp" >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/reg_win_paw_et2"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorAlpha1"
                android:hint="请设置登陆密码(长度6~12位)"
                android:textColor="@color/cityFont"
                android:textColorHint="@color/textcolorhint"
                android:gravity="center"
                android:maxLength="12"
                android:maxLines="1"
                android:textSize="14dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:text="New Text"
                android:id="@+id/textView45"
                android:background="#59585b"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp" />
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="立即注册"
            android:id="@+id/reg_win_reg_but"
            android:background="@color/colorfont"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"
            android:layout_below="@+id/linearLayout5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp" />

    </LinearLayout>

</RelativeLayout>